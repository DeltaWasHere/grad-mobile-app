<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CompletionistGuild" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oscuro</item>
        <item name="colorPrimaryVariant">@color/mate</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/mate</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CompletionistGuild.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CompletionistGuild.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CompletionistGuild.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="rateDialog" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/gray</item>
        <item name ="android:textColor">@color/white</item>
    </style>

    <style name="rateStars" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name ="android:textColor">@color/white</item>
    </style>

    resources>
    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>


</resources>